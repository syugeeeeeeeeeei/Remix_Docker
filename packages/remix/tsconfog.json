{
	"extends": "../../tsconfig.base.json",
	"include": ["**/*.ts", "**/*.tsx"],
	"compilerOptions": {
	  "lib": ["DOM", "DOM.Iterable", "ES2022"],
	  "isolatedModules": true,
	  "esModuleInterop": true,
	  "jsx": "react-jsx",
	  "module": "ESNext",
	  "moduleResolution": "Bundler",
	  "resolveJsonModule": true,
	  "target": "ES2022",
	  "strict": true,
	  "allowJs": true,
	  "forceConsistentCasingInFileNames": true,
	  "noEmit": true,
	  "baseUrl": ".",
	  "paths": {
		"~/*": ["./app/*"]
	  }
	},
	"references": [
	  { "path": "../database" }
	]
  }